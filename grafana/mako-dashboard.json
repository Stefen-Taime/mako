        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "rate(mako_dlq_total{pipeline=~\"$pipeline\"}[1m]) * 60",
          "legendFormat": "dlq",
          "refId": "B"
