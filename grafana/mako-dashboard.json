        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "expr": "rate(mako_schema_failures_total{pipeline=~\"$pipeline\"}[1m]) * 60",
          "legendFormat": "schema_failures",
          "refId": "C"
        }
